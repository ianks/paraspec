#!/usr/bin/env ruby

$: << File.join(File.dirname(__FILE__), '..', 'lib')

require 'byebug'
require 'paraspec'

#Paraspec.logger.level = Logger::DEBUG

files = if ARGV.length > 0
  ARGV
else
  ['spec']
end
RSpec.configuration.files_or_directories_to_run = files

supervisor = Paraspec::Supervisor.new(concurrency: 8)
supervisor.run
